generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Cargo {
  ADM
  USER
}

model Usuario {
  id_usuario String @id @default(dbgenerated("gen_random_uuid()"))
  nome       String
  senha      String
  email      String @unique
  cpf        String
  plano      String
  cargo      Cargo
}

model Cliente {
  id_cliente         String         @id @default(dbgenerated("gen_random_uuid()"))
  tipo_documento     TipoDocumento?
  documento          String
  razao_social       String
  nome_fantasia      String?
  email              String?
  enviar_pedidos     Boolean?
  endereco           String
  numero             Int
  bairro             String
  complemento        String?
  estado             String
  municipio          String
  inscricao_estadual String?
  cep                String
  transportadora     String?
  inativo            Boolean?
  Pedido             Pedido[]

  @@unique([documento])
}

enum TipoDocumento {
  CPF
  CNPJ
}

model Produto {
  id_produto        String  @id @default(dbgenerated("gen_random_uuid()"))
  nome              String
  descricao         String
  preco             Decimal
  categoria_produto String
  peso_liquido      Decimal
  peso_bruto        Decimal
  situacao          String
  unidade           String
  codigo            String
  estoque           Int
  Pedido            Pedido? @relation(fields: [id_pedido], references: [id_pedido])
  id_pedido         String?
}

model Pedido {
  id_pedido            String    @id @default(dbgenerated("gen_random_uuid()"))
  produtos             Produto[]
  cliente              Cliente   @relation(fields: [id_cliente], references: [id_cliente])
  desconto             Decimal   @default(0)
  quantidade           Int       @default(0)
  situacao             String    @default("pending")
  preco_total          Decimal   @default(0)
  data_entrega         DateTime?
  data_emissao         DateTime  @default(now())
  ordem_compra         String?
  observacao           String?
  orcamento            Boolean
  tabela_preco         String
  empresa_representada Empresa   @relation(fields: [id_empresa], references: [id_empresa])
  tipo_pagamento       String?
  id_cliente           String
  id_empresa           String
}

model Empresa {
  id_empresa                 String   @id @default(dbgenerated("gen_random_uuid()"))
  nome                       String
  situacao                   String
  email                      String
  razao_social               String
  inscricao_estadual         String?
  controlar_estoque          Boolean
  bloquear_venda_sem_estoque Boolean
  cnpj                       String
  cep                        String
  logradouro                 String
  complemento                String?
  bairro                     String
  localidade                 String
  uf                         String
  Pedido                     Pedido[]
}
